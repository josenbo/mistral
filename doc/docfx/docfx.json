{
  "metadata": [
    {
      "src": [
        { "src": "../src/vigolib", "files": [ "**/*.csproj" ] },
        { "src": "../src/vigocfg", "files": [ "**/*.csproj" ] },
        { "src": "../src/vigoftg", "files": [ "**/*.csproj" ] }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          ".attachments/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "template/minimal"
    ],
    "globalMetadata": {
      "_appName": "vigo",
      "_appTitle": "File Staging Utility",
      "_enableSearch": true,
      "pdf": false
    }
  }
}